model Order {
  id         String     @id @default(cuid())
  account    Account    @relation(fields: [account_id], references: [id])
  account_id String
  seller_id  String
  price      Float
  status     String
  user       User       @relation(fields: [user_id], references: [id])
  user_id    String
  Withdraw   Withdraw[]

  @@map("Order")
}

model Withdraw {
  id       String   @id @default(cuid())
  status   String
  amount   Float
  paidAt   DateTime
  order    Order    @relation(fields: [order_id], references: [id])
  order_id String
  user     User     @relation(fields: [user_id], references: [id])
  user_id  String
}

