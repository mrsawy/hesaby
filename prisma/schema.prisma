  id    String @id @default(cuid())
  title String
  image String
}

model Silder {
  id    String @id @default(cuid())
  image String
}

model Transaction {
  id     String @id @default(cuid())
  amount String
  type   String
}

model SiteData {
  id              String @id @default(cuid())
  logo            String
  tax             String
  termsConditions String
}

model FaQ {
  id       String @id @default(cuid())
  question String
  answer   String
}
